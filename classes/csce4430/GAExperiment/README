# Makefile included for simplicity...

make test && ./test # automated tests, very old.  from program 2 or 3.
make avltest && ./avltest # automated avl tests, painful.
make gen && ./gen # the genetic algorithm app, prints it's usage info.

# time all 4 methods with the same large random data.
# (the same and random because i don't call srand in my driver.)
for i in 1 2 3 4; do
  echo -n "method $i:"
  time ./gen 9999 9999 $i 1
  echo ""
done

# test all 4 methods, and check to see that their output is the same.
for i in 1 2 3 4; do
  echo -n "method $i..."
  ./gen 9999 9999 $i > $i.txt
  echo " done."
done
for i in 1 2 3 4; do
  for j in 1 2 3 4; do
    diff -qu $i.txt $j.txt
  done
done

